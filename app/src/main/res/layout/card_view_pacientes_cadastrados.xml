<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/bg_medico_view_model"
        >

        <TextView
            android:id="@+id/tv_nome_paciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@id/btn_delete"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Paciente"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_data_nascimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_below="@id/tv_nome_paciente"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@id/btn_delete"
            android:text="Data nascimento: 00/00/0000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_telefone_paciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_below="@id/tv_data_nascimento"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@id/btn_delete"
            android:text="Telefone: (14)999999999"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Delete"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/btn_edit"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/btn_delete"
            android:contentDescription="Edit"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>